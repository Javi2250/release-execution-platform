pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Run script') {
      steps {
        sh 'chmod +x run.sh'
        sh './run.sh'
      }
    }

  }

  post {
    success {
      echo 'ğŸ‰ Pipeline ejecutado correctamente'
    }
    failure {
      echo 'âŒ Pipeline fallido'
    }
  }
}
